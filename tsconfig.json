{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react",
    "noEmit": true
  },
  "include": ["src", "types", "**/*.setup.*"],
  "exclude": ["**/node_modules/**/*", "**/stories/**"]
}
