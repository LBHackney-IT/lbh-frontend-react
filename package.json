{
  "name": "lbh-frontend-react",
  "description": "London Borough of Hackney's React component library",
  "license": "MIT",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:barrels && rollup --config",
    "build:watch": "npm run build -- --watch",
    "build:barrels": "barrelsby --config ./barrelsby.json",
    "test": "npm run format:check && npm run lint && npm run test:all",
    "test:update": "npm run format && npm run lint:fix && npm run test:all:update",
    "test:all": "npm run test:unit",
    "test:all:update": "npm run test:unit:update",
    "test:unit": "jest --detectOpenHandles",
    "test:unit:update": "npm run test:unit -- --updateSnapshot",
    "lint": "eslint --report-unused-disable-directives --config ./.eslintrc.full.js '**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write '**/*'",
    "format:check": "prettier --check '**/*'",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": ">= 16"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.11",
    "@types/react-test-renderer": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "barrelsby": "^2.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "govuk-frontend": "^3.2.0",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lbh-frontend": "^1.0.2",
    "node-sass": "^4.13.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "react": "^16.11.0",
    "react-test-renderer": "^16.11.0",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-delete": "^1.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "ts-jest": "^24.1.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "pre-commit": "pretty-quick --staged"
  }
}
